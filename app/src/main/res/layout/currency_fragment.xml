<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/fromTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/from"
            android:textSize="12sp"
            />
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/fromTxt"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/toText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to"
            android:layout_toRightOf="@id/fromTxt"
            android:layout_toEndOf="@id/fromTxt"
            android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            android:textSize="12sp"/>
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/spinner1"
            android:layout_toEndOf="@id/spinner1"
            android:layout_below="@id/toText"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ligne"
            android:src="@android:drawable/divider_horizontal_textfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:layout_marginTop="12dp"
            android:color="#ffffff"
            android:contentDescription="@string/divider"
            />
        <ImageView
            android:id="@+id/c_f_flag"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_below="@id/ligne"
            android:layout_marginTop="12dp"
            android:src="@drawable/united"
            android:contentDescription="@string/flag1"/>
        <TextView
            android:id="@+id/c_f_text"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/ligne"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/c_f_flag"
            android:layout_toEndOf="@id/c_f_flag"
            android:text="@string/united_states_dollar1"/>
        <EditText
            android:id="@+id/edit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ligne"
            android:layout_marginTop="3dp"
            android:inputType="numberDecimal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/c_f_text"
            android:layout_toEndOf="@id/c_f_text"
            android:maxLength="30"
            />
        <ImageView
            android:id="@+id/c_f_symbol"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/symbol"
            android:layout_below="@id/c_f_flag"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/symbol"/>
        <ImageView
            android:id="@+id/c_f_flag2"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_below="@id/c_f_symbol"
            android:layout_marginTop="20dp"
            android:src="@drawable/united"
            android:contentDescription="@string/flag2"/>
        <TextView
            android:id="@+id/c_f_text2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/c_f_symbol"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@id/c_f_flag2"
            android:layout_toEndOf="@id/c_f_flag2"
            android:text="@string/united_states_dollar1"/>
        <TextView
            android:id="@+id/txt_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/c_f_flag2"
            android:layout_marginTop="18dp"
            android:maxLength="30"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text=""
            />
        <Button
            android:id="@+id/convertButton"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:text="@string/convert"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_result"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            />
    </RelativeLayout>



</LinearLayout>